<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:bind="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="CommentUser"
            type="com.example.zhihu.bean.User" />
        <variable
            name="Comment"
            type="com.example.zhihu.bean.Comment" />
    </data>

    <RelativeLayout
        android:layout_marginTop="10sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_centerVertical="true"
            android:layout_marginTop="20dp"
            android:id="@+id/comment_circle_image_item"
            android:layout_width="50dp"
            android:layout_height="50dp"
            bind:imageUrl="@{CommentUser.imageUrl}"/>

        <LinearLayout
            android:layout_centerVertical="true"
            android:layout_marginStart="10sp"
            android:layout_toEndOf="@id/comment_circle_image_item"
            android:layout_marginEnd="10sp"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:text="@{CommentUser.username}"
                android:textStyle="bold"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@{Comment.commentText}"
                android:textSize="16sp"/>

        </LinearLayout>

    </RelativeLayout>
</layout>