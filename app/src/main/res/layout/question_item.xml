<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:bind="http://schemas.android.com/tools">

    <data>
        <variable
            name="Question"
            type="com.example.zhihu.bean.Question" />
        <variable
            name="User"
            type="com.example.zhihu.bean.User" />
    </data>

    <LinearLayout
        android:id="@+id/total_layout"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.cardview.widget.CardView
            android:elevation="5dp"
            app:cardCornerRadius="10sp"
            app:cardBackgroundColor="#8DFFFFFF"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/question_circle_image"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    bind:imageUrl="@{User.imageUrl}"/>

                <TextView
                    android:layout_marginTop="10sp"
                    android:layout_marginBottom="10sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="20sp"
                    android:layout_marginStart="10sp"
                    android:layout_toEndOf="@id/question_circle_image"
                    android:text="@{Question.questionText}"
                    android:textStyle="bold"/>

            </RelativeLayout>


        </androidx.cardview.widget.CardView>

    </LinearLayout>

</layout>