<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:id="@+id/relative"
            android:layout_marginTop="10sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/back_from_write"
                android:layout_centerVertical="true"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/close_add_fragment"/>

            <LinearLayout
                android:id="@+id/linear"
                android:orientation="horizontal"
                android:layout_centerHorizontal="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <Button
                    android:id="@+id/add_image_btn"
                    android:layout_toStartOf="@id/add_video_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="添加图片"
                    android:background="@drawable/login_btn_backgroud"
                    android:textStyle="bold"/>

                <Button
                    android:layout_alignParentEnd="true"
                    android:layout_marginEnd="10sp"
                    android:id="@+id/add_video_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/login_btn_backgroud"
                    android:text="添加视频"
                    android:textStyle="bold"/>

            </LinearLayout>

            <ImageView
                android:id="@+id/send_answer_btn"
                android:layout_centerVertical="true"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="10sp"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/send_answer_image"/>


        </RelativeLayout>

        <ScrollView
            android:layout_below="@+id/relative"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <EditText
                    android:layout_marginTop="20sp"
                    android:id="@+id/answer_text"
                    android:hint="写回答.."
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@null"/>

                <LinearLayout
                    android:layout_marginTop="10sp"
                    android:id="@+id/add_image_linear"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

                <LinearLayout
                    android:layout_marginTop="10sp"
                    android:id="@+id/add_video_linear"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

            </LinearLayout>

        </ScrollView>

    </RelativeLayout>

</layout>