<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:bind="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="AnswerUser"
            type="com.example.zhihu.bean.User" />
        <variable
            name="Answer"
            type="com.example.zhihu.bean.Answer" />
    </data>

    <RelativeLayout
        android:layout_marginEnd="10sp"
        android:layout_marginTop="15dp"
        android:background="#ffffff"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/comment_user_info"
            android:orientation="horizontal"
            android:layout_marginTop="15dp"
            android:layout_marginStart="10sp"
            android:layout_marginEnd="10sp"
            android:gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/image"
                android:layout_width="50dp"
                android:layout_height="50dp"
                bind:imageUrl="@{AnswerUser.imageUrl}"/>

            <TextView
                android:layout_marginStart="10sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:text="@{AnswerUser.username}"
                android:textStyle="bold"/>

        </LinearLayout>

        <LinearLayout
            android:layout_below="@id/comment_user_info"
            android:id="@+id/answer_detail_linear"
            android:orientation="vertical"
            android:layout_marginTop="10sp"
            android:layout_marginStart="10sp"
            android:layout_marginEnd="10sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@{Answer.answerText}"/>

            <LinearLayout
                android:layout_marginTop="10sp"
                android:id="@+id/add_image_linear"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <LinearLayout
                android:layout_marginTop="10sp"
                android:id="@+id/add_video_linear"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

        </LinearLayout>

    </RelativeLayout>

</layout>